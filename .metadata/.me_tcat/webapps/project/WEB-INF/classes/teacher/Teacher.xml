<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">  

 <mapper namespace="teacher.TeacherDAO">
     <!-- 查找 -->
     <select id="findByTid" parameterType="java.lang.String" resultType="Teacher">
     select * from teacher where tid = #{0}
     </select>
      <insert id="add" parameterType="Teacher">    
        insert into teacher(tid,tname)   
        values(#{tid},#{tname})    
    </insert>
 </mapper>